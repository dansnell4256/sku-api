{
  "name": "sku-api",
  "version": "1.0.0",
  "description": "SKU Management API",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "dev": "ts-node src/server.ts",
    "clean": "rm -rf build",
    "test": "jest",
    "api-tests": "npm run build && jest src/api_tests/"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/api_tests/**/*.test.ts"],
    "testTimeout": 10000
  }
}